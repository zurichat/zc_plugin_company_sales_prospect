            "description": ""
          }
        }
      }
    }
  },
  "security": [
    {
      "app_id": []
    }
  ],
  "components": {
    "schemas": {

      "prospect": {
        "title": "Prospect",
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "title": "id",
            "default": "123abc456def"
          },
          "name": {
            "type": "string",
            "default": "John Doe"
          },
          "phone_number": {
            "type": "string",
            "default": "+2348012345678"
          },
          "email": {
            "type": "string",
            "default": "example@mail.com"
          },
          "deal_stage": {
            "type": "string",
            "enum": [
              "prospect",
              "proposal",
              "negotiation",
              "closed"
            ],
            "default": "proposal"
          }
        }
      },

      "deal": {
        "title": "Deal",
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "title": "id",
            "default": "123abc456def"
          },
          "name": {
            "type": "string",
            "default": "John Doe"
          },
          
          "deal_stage": {
            "type": "string",
            "default": "Prospect"
          },
          "amount": {
            "type": "string",
            "default": "$123456"
          },
          "activity": {
            "type": "string",
            "default": "Coffee metting"
          },
          "description": {
            "type": "string",
            "default": "Deliver 10, 000 bags of cement"
          }
        }
      },

      "onboarding": {
        "title": "Onboarding",
        "type": "object",
        "properties": {
          "company": {
            "type": "string",
            "default": "Zuri"
          },
          "sector": {
            "type": "string",
            "default": "technology"
          },
          "position": {
            "type": "string",
            "default": "executive"
          }
        }
      },


      "room": {
        "title": "Room",
        "type": "object",
        "properties": {
          "user": {
            "type": "integer",
            "default": 1
          },
          "room_name": {
            "type": "string",
            "default": "prospects"
          }
        }
      }
    },

    "securitySchemes": {
      "app_id": {
        "type": "apiKey",
        "description": "API key to authorize requests.",
        "name": "Session",
        "in": "cookie"
      }
    }
  },
  "servers": [
