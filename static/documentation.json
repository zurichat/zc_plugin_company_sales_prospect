{
  "openapi": "3.0.2",
  "info": {
    "title": "Sales Prospects API",
    "description": "Sales prospects is a plugin that lets you to keep track of your organizationâ€™s prospects and deals.",
    "version": "1.0.0",
    "contact": {
      "email": "developer@zuri.chat"
    }
  },
  
  "paths": {

    "/api/v1/prospects/": {
      "get": {
        "tags": [
          "Prospects"
        ],
        "summary": "Reads data from ZuriCore DB and return list of available prospects.",
        "responses": {
          "200": {
            "description": "Successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/prospect"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/prospects/{id}/": {
      "get": {
        "tags": [
          "Prospects"
        ],
        "summary": "Fetches prospect with the specified id from the DB",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of prospect to fetch",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/prospect"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/prospects/create/": {
      "post": {
        "tags": [
          "Prospects"
        ],
        "summary": "Creates a new prospect",
        "responses": {
          "200": {
            "description": "Successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/prospect"
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "title": "Prospect",
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "default": "John Doe"
                  },
                  "email": {
                    "type": "string",
                    "default": "example@mail.com"
                  },
                  "phone_number": {
                    "type": "string",
                    "default": "+2348012345678"
                  },
                  "deal_stage": {
                    "type": "string",
                    "enum": [
                      "prospect",
                      "proposal",
                      "negotiation",
                      "closed"
                    ],
                    "default": "proposal"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/prospects/update/{id}/": {
      "put": {
        "tags": [
          "Prospects"
        ],
        "summary": "Edits a prospect with specified id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of prospect to be edited",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/prospect"
                }
              }
            }
          }
        }
      }
    },


    "/api/v1/deals/list/": {
      "get": {
        "tags": [
          "Deals"
        ],
        "summary": "Reads data from ZuriCore DB and return list of available deals.",
        "responses": {
          "200": {
            "description": "Successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/deal"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/deals/{id}/": {
      "get": {
        "tags": [
          "Deals"
        ],
        "summary": "Fetches prospect with the specified id from the DB",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of deal to fetch",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/deal"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/deals/create/": {
      "post": {
        "tags": [
          "Deals"
        ],
        "summary": "Creates a new deal",
        "responses": {
          "200": {
            "description": "Successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/deal"
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "title": "Deal",
                "type": "object",
                "properties": {
                  "prospect_id": {
                    "type": "string",
                    "default": "123abc456def789ghi"
                  },
                  "name": {
                    "type": "string",
                    "default": "John Doe"
                  },
                  "deal_stage": {
                    "type": "string",
                    "default": "Open"
                  },
                  "amount": {
                    "type": "string",
                    "default": "$123456"
                  },
                  "activity": {
                    "type": "string",
                    "default": "Coffee meeting"
                  },
                  "description": {
                    "type": "string",
                    "default": "Do something for the prospect"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/deals/update/{id}/": {
      "put": {
        "tags": [
          "Deals"
        ],
        "summary": "Edits a deal with specified id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of prospect to be edited",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/deal"
                }
              }
            }
          }
        }
      }
    },



    "/api/v1/onboarding/": {
      "get": {
        "tags": [
          "Onboarding"
        ],
        "responses": {
          "200": {
            "description": "",
            "content": {
              "apllication/json": {
                "schema": {
                  "$ref": "#/components/schemas/onboarding"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/onboarding/create/": {
      "post": {
        "tags": [
          "Onboarding"
        ],
        "requestBody": {
          "content": {
            "apllication/json": {
              "schema": {
                "$ref": "#/components/schemas/onboarding"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "",
            "content": {
              "apllication/json": {
                "schema": {
                  "$ref": "#/components/schemas/onboarding"
                }
              }
            }
          }
        }
      }
    },


    "/api/v1/add-to-room/": {
      "post": {
        "tags": [
