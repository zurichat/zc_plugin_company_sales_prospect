          }
        }
      }
    },
    "/api/v1/leave-room/": {
      "post": {
        "tags": [
          "Room"
        ],
        "summary": "Deletes users from a room.",
        "responses": {
          "200": {
            "description": "Successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/room"
                }
              }
            }
          }
        },
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of room",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "title": "Room",
                "type": "object",
                "properties": {
                  "user": {
                    "type": "integer",
                    "default": 1
                  },
                  "room_name": {
                    "type": "string",
